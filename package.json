{
  "name": "codingsimba",
  "description": "Coding Simba is a community-driven learning platform for sharing knowledge, tutorials, articles, courses, and structured programs in software development. Join our community to learn, share, and grow together.",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "license": "AGPL-3.0-only",
  "author": "Christopher S. Aondona <me@codingsimba.com> (https://codingsimba.com/)",
  "homepage": "https://codingsimba.com",
  "bugs": {
    "url": "https://github.com/codingsimba-dev/codingsimba/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codingsimba-dev/codingsimba"
  },
  "keywords": [
    "education",
    "programming",
    "tutorials",
    "courses",
    "learning platform",
    "software development"
  ],
  "files": [
    "app/",
    "content/",
    "public/",
    "prisma/",
    "LICENSE",
    "README.md",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md",
    "SECURITY.md"
  ],
  "prisma": {
    "schema": "prisma/schema",
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "build": "cross-env react-router build",
    "dev": "cross-env MOCKS=true react-router dev",
    "dev:no-mocks": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "start:mocks": "cross-env MOCKS=true react-router-serve ./build/server/index.js",
    "test:all": "vitest --workspace=vitest.workspace.ts --project unit --project browser",
    "test:unit": "vitest --workspace=vitest.workspace.ts --project unit --ui",
    "test:browser": "vitest --workspace=vitest.workspace.ts --project browser",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install --with-deps chromium",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "prepare": "husky"
  },
